# WhatsApp API Configuration
PORT=3000
NODE_ENV=development

# WhatsApp Business API (if using official API)
WHATSAPP_BUSINESS_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_verify_token

# Alternative: WhatsApp Web.js configuration
WHATSAPP_SESSION_PATH=./sessions
WHATSAPP_CLIENT_ID=your_client_id

# Security
JWT_SECRET=your_jwt_secret_key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (optional)
DATABASE_URL=mongodb://localhost:27017/whatsapp-api